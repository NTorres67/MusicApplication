<link href="~/Content/AlbumsStyleSheet.css" rel="stylesheet" />

@model IEnumerable<MusicApplication.Models.Album>

@{
    ViewBag.Title = "Index";
}

<div class="row details-index">
    <div class="col">
        <h2>Album Details</h2>
    </div>
</div>

<div class="row"
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AlbumName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearPublished)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WonAward)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artist.ArtistName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AlbumName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearPublished)
        </td>
        <td>
            <a href="@Url.Action("ToggleDone", new { id = item.WonAward })">
                @if (item.WonAward == true)
                {
                    <span class="glyphicon glyphicon-check"></span>
                }
                else
               {
                <span class="glyphicon glyphicon-unchecked"></span>
               }
            </a>
        </td>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Photo)" width="150" height="150" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.ArtistName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlbumID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlbumID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlbumID })
        </td>
    </tr>
}

</table>
