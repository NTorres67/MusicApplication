<link href="~/Content/ArtistStyleSheet.css" rel="stylesheet" />

@model IEnumerable<MusicApplication.Models.Artist>

@{
    ViewBag.Title = "Index";
}


@*Artist Index Page*@
<div class="row artist-index">
    <div class="col">
        <p class="artist-header">Artist Listing</p>
    </div>
</div>
    
<div class="row">
    <div class="col">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    </div>
</div>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-6">
            <div class="thumbnail artist-index">
                <div class="caption artist">
                    <p class="artist-name"> @Html.DisplayFor(modelItem => item.ArtistName)</p>
                    <p> Genre : @Html.DisplayFor(modelItem => item.MusicGenre)</p>

                    @Html.ActionLink("Edit", "Edit", new { id = item.ArtistID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ArtistID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ArtistID })

                </div>
            </div>
        </div>
    }
</div>



